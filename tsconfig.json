{
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".env"
  ],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/lucid"
    ]
  }
}
